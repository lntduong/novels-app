// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  EDITOR
  VIEWER
}

enum StoryStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String?  @unique // Optional initially to support existing users, can be made required later or migrated
  password  String?  // Hashed password for NextAuth
  nickname  String?
  avatar    String?
  birthDate DateTime?
  role      UserRole @default(VIEWER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stories        Story[]
  chapterRatings ChapterRating[]
  chapterComments ChapterComment[]
  bookmarks       Bookmark[]
  readingHistory  ReadingHistory[]
  recoveryCodes   RecoveryCode[]

  @@map("users")
}

model Story {
  id          String      @id @default(uuid())
  title       String
  authorName  String?     // Tên tác giả
  slug        String      @unique
  description String?     @db.Text
  coverImage  String?
  status      StoryStatus @default(DRAFT)
  views       Int         @default(0)
  authorId    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  author   User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  chapters Chapter[]
  genres   Genre[]
  bookmarks Bookmark[]
  readingHistory ReadingHistory[]

  @@index([slug])
  @@index([status])
  @@index([authorId])
  @@map("stories")
}

model Genre {
  id    String @id @default(uuid())
  name  String
  slug  String @unique

  stories Story[]

  @@map("genres")
}

model Chapter {
  id        String   @id @default(uuid())
  title     String
  slug      String
  content   String   @db.Text
  order     Int
  accessPassword String? // Optional password for chapter access
  storyId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  story    Story             @relation(fields: [storyId], references: [id], onDelete: Cascade)
  ratings  ChapterRating[]
  comments ChapterComment[]
  readingHistory ReadingHistory[]

  @@unique([storyId, slug])
  @@index([storyId])
  @@index([slug])
  @@map("chapters")
}

model ChapterRating {
  id            String   @id @default(uuid())
  rating        Int      // 1-5 stars
  userId        String?  // Optional - null for anonymous
  anonymousName String?  // Display name for anonymous users
  chapterId     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user    User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  chapter Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@unique([userId, chapterId]) // One rating per logged-in user per chapter
  @@index([chapterId])
}

model ChapterComment {
  id            String   @id @default(uuid())
  content       String   @db.Text
  userId        String?  // Optional - null for anonymous
  anonymousName String?  // Display name for anonymous users
  chapterId     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user    User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  chapter Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@index([chapterId])
  @@index([userId])
}

model Bookmark {
  id        String   @id @default(uuid())
  userId    String
  storyId   String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  story  Story  @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@unique([userId, storyId])
  @@index([userId])
  @@map("bookmarks")
}

model ReadingHistory {
  id        String   @id @default(uuid())
  userId    String
  storyId   String
  chapterId String
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  story   Story   @relation(fields: [storyId], references: [id], onDelete: Cascade)
  chapter Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@unique([userId, storyId])
  @@index([userId])
  @@index([updatedAt])
  @@map("reading_history")
}

model RecoveryCode {
  id        String   @id @default(uuid())
  userId    String
  code      String   // Hashed code
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("recovery_codes")
}
